{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
